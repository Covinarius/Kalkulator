        <Button x:Name="button_Copy1" Content="ODEJMIJ" HorizontalAlignment="Left" Margin="406,29,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button_Copy2" Content="PODZIEL" HorizontalAlignment="Left" Margin="406,88,0,0" VerticalAlignment="Top" Width="75"/>
